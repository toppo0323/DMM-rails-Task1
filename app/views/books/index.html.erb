
<p class="message"><%= flash[:succes]  %></p>


    <h1 class="h1">Books</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show",book_path(book.id) , class: "link"%></td>
                <td><%= link_to "Edit",edit_book_path(book), class: "link" %></td>
                <td><%= link_to "Destroy",book_path(book),method: :delete ,"data-confirm" => "Are you sure?", class: "link"%></td>
            </tr>
            <% end %>


        </tbody>
    </table>



<h2 class="small-title">New book</h2>


    <% if @book.errors.any?%>
    <div class="errors">
         <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
         <ul>
             <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
         </ul>
     </div>
    <% end %>

<%= form_with model:@book, url:'/books' ,local:true do |f| %>



        <div class="field">
            <label>Title</label>
            <%= f.text_field :title %>
        </div>

        <div class="field">
            <label>Body</label>
            <%= f.text_area :body%>
        </div>
        <div class="actions">
            <%= f.submit 'Create Book', class: "btn"%>

        </div>
        <% end %>

