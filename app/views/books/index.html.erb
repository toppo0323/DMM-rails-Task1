

<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr>
            <th><%= book.title %></th>
            <th><%= book.body %></th>
            <th><%= link_to "Show",book_path(book.id) %></th>
            <th><%= link_to "Edit",edit_book_path(book) %></th>
            <th><%= link_to "Destroy",book_path(book),method: :delete ,"data-confirm" => "本当に削除しますか？"%></th>
        </tr>
        

        <% end %>
        

    </tbody>
</table>



<h1>New book</h1>

